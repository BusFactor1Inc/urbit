:-  %arvo
^-  dock
|=  [now=time wha=@ta]
%^    hull
    (iris now)
  wha
^-  bead
|=  [now=time wha=@ta]
:-  ^-  lime
    :-  %all
    :~  :^    %rod
            %abel
          :-  [~ ~]
          :-  [%eyre %arvo ~]
          |=  hap=*  ^-  (unit)
          ?.(=(~ hap) ~ [~ ~])
        |=([seq=@ud muz=* cax=bill] [%run q.cax])
    ==
^-  vane
=>  ..$
=>  |%
    ++  game                                            ::  system state 
      $:  fox=fort
      ==
    ++  move  plea
    ++  plea
      $%  [%cash p=@p q=buck]                           ::  civil license
          [%make p=@t q=@]                              ::  wild license
          [%rock p=rock]                                ::  hear a packet
      ==
    --
=>  |%
    ++  luft
      |=  byn=(list boon)
      ^-  lime
      :-  %all
      %+  turn
        byn
      |=  bun=boon  ^-  lime
      [%say %pi [%pout ~] bun]
    --
=+  sys=*game
|%
++  peek  |=([cam=lens hap=path] ~)
++  poke  
  |=  [cam=lens man=*] 
  ^-  [p=lime q=vane]
  =+  now=when:cam
  =+  muv=((hard move) man)
  ?-    -.muv 
      %cash
    =+  vun=(~(have am [now fox.sys]) p.muv q.muv)
    [(luft p.vun) +>.$(fox.sys q.vun)]
  ::
      %make
    =+  vun=(~(come am [now fox.sys]) p.muv q.muv)
    [(luft [[%beer p.vun] ~]) +>.$(fox.sys q.vun)]
  ::
      %rock
    =+  vun=(~(gnaw am [now fox.sys]) p.muv)
    [(luft p.vun) +>.$(fox.sys q.vun)]
  ==
